{
    "name": "talesoft/tale-reader",
    "type": "library",
    "keywords": ["reader", "psr-7", "stream-reader", "text-reader", "expression-reader"],
    "description": "A reading library that can read and parse strings and PSR-7 streams",
    "license": "MIT",
    "homepage": "http://docs.talesoft.codes/php/tale/reader",
    "scripts": {
        "test": "phpunit",
        "test:coverage-html": "phpunit --coverage-html=coverage",
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    },
    "authors": [
        {
            "name": "Torben Koehn",
            "email": "torben@talesoft.codes"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-ctype": "*",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "^3.5",
        "talesoft/tale-stream": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Tale\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tale\\Test\\": "tests"
        }
    }
}
